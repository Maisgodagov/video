# Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================
# S3 Input Configuration (Source Videos)
# ============================================

# Enable S3 input (set to "true" to use S3, "false" to use local input folder)
USE_S3_INPUT=true

# S3 Input Bucket Configuration
S3_INPUT_BUCKET=video-pipeline-input
S3_INPUT_ENDPOINT=https://s3.ru1.storage.beget.cloud
S3_INPUT_REGION=ru-1
S3_INPUT_ACCESS_KEY_ID=your_access_key_here
S3_INPUT_SECRET_ACCESS_KEY=your_secret_key_here

# S3 Folder Structure (optional, defaults shown)
S3_INPUT_PENDING_PREFIX=pending/
S3_INPUT_PROCESSING_PREFIX=processing/
S3_INPUT_COMPLETED_PREFIX=completed/
S3_INPUT_FAILED_PREFIX=failed/

# Enable continuous polling mode (monitors S3 for new videos)
S3_INPUT_ENABLE_POLLING=false
S3_INPUT_POLLING_INTERVAL=60

# ============================================
# Google Cloud Configuration (if using GCS)
# ============================================

# Google Cloud Project ID
GCP_PROJECT_ID=your-project-id

# Path to service account key file (if using GCS)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# ============================================
# Google APIs
# ============================================

# Google Gemini API Key
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_GEMINI_API_KEY=your_gemini_api_key_here
GOOGLE_GEMINI_MODEL=gemini-2.0-flash-001

# Translation settings
GOOGLE_TRANSLATION_CHUNK_SIZE=40
GOOGLE_TRANSLATION_ATTEMPTS=3

# ============================================
# Database Configuration
# ============================================

DB_HOST=abenirsekuth.beget.app
DB_PORT=3306
DB_USER=mgodag3j_english
DB_PASSWORD=Gmr19970619.!
DB_NAME=mgodag3j_english

# ============================================
# Whisper Configuration (for Linux/VM)
# ============================================

# Path to Python executable (adjust for your VM)
PYTHON_EXECUTABLE=/home/your-username/whisper-env/bin/python

# Whisper settings
WHISPER_MODEL=small.en
WHISPER_DEVICE=cuda  # or "cpu" if no GPU

